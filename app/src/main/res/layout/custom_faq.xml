<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_10sdp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/_5sdp">

                <com.app.perk99restaurant.custom.CustomTextViewRegular
                    android:id="@+id/tvName"
                    android:layout_width="@dimen/_210sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Lorem ipsum is simply dummy text ?"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/app_orange"
                    android:textStyle="normal"
                    android:layout_marginLeft="@dimen/_5sdp"/>

                    <ImageView
                    android:id="@+id/ivDrop"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ccp_down_arrow"
                    android:textColor="@color/app_black"
                    android:layout_marginLeft="@dimen/_5sdp"/>


                <com.app.perk99restaurant.custom.CustomTextViewRegular
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_text"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone"
                    android:padding="@dimen/_4sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvName"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/gray_btn_bg_pressed_color"
                    android:textStyle="normal"
                    android:layout_marginLeft="@dimen/_5sdp"/>


                   <View
                    android:id="@+id/viewww"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_btn_bg_pressed_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingBottom="@dimen/_5sdp"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDesc"
                    android:layout_marginTop="@dimen/_5sdp"/>





            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>


