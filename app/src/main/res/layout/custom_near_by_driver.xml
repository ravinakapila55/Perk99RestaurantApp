<androidx.cardview.widget.CardView
    android:id="@+id/cvCar"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:elevation="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cc_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearr"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="6dp"
        android:layout_marginRight="8dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivDelievryBoy"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_color="@color/app_orange"
            app:civ_border_width="1dp"
            android:src="@drawable/ic_dummy_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.app.perk99restaurant.custom.CustomTextViewRegular
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jack Smith"
            android:textSize="14sp"
            android:padding="4dp"
            android:textColor="@color/app_black"
            android:layout_marginLeft="12dp"
            android:textStyle="normal"
            app:layout_constraintLeft_toRightOf="@+id/ivDelievryBoy"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.app.perk99restaurant.custom.CustomTextViewRegular
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="14sp"
                android:textColor="@color/app_black"
                android:layout_marginLeft="12dp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/ivStar"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/star"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tvRating"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.app.perk99restaurant.custom.CustomTextViewRegular
            android:id="@+id/tvDesc"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum Lorem ipsum"
            android:textSize="12sp"
            android:maxLines="2"
            android:textColor="@color/light_black"
            android:layout_marginLeft="12dp"
            android:textStyle="normal"
            android:padding="4dp"
            app:layout_constraintLeft_toRightOf="@+id/ivDelievryBoy"
            app:layout_constraintTop_toBottomOf="@+id/tvName"/>



        <com.app.perk99restaurant.custom.CustomTextViewRegular
            android:id="@+id/tvAssign"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="assign A job"
            android:textColor="@color/app_white"
            android:background="@drawable/bg_brown_corner"
            android:layout_marginLeft="14dp"
            android:textStyle="normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDesc"/>


    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.cardview.widget.CardView>

